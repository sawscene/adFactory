<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="500.0" xmlns:fx="http://javafx.com/fxml" fx:controller="jp.adtekfuji.addatabaseapp.component.DeleteActualFxController">
    <children>
        <StackPane minHeight="-Infinity" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <GridPane fx:id="operationPane" minHeight="-Infinity" minWidth="-Infinity" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <!-- 実績出力・削除実行 -->
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label styleClass="text-normal" text="%key.DeleteActual.Infomation" />
                                <Button fx:id="executeButton" mnemonicParsing="false" onAction="#onExecuteButton" styleClass="SimpleButton" minWidth="100.0" prefHeight="35.0" text="%key.Execution" GridPane.columnIndex="1" />
                            </children>
                            <padding>
                                <Insets bottom="0.0" left="4.0" right="4.0" top="0.0" />
                            </padding>
                        </GridPane>
                        <!-- 実績リスト -->
                        <GridPane vgap="12.0" GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <TableView fx:id="tableView" editable="true" focusTraversable="false" prefHeight="200.0" GridPane.rowIndex="1">
                                            <columns>
                                                <TableColumn fx:id="selectedColumn" text="" prefWidth="40.0" />
                                                <TableColumn fx:id="yearMonthColumn" text="%key.DeleteActual.MonthlyResults" prefWidth="160.0" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </GridPane>
                                <HBox spacing="4.0"  GridPane.rowIndex="1" >
                                    <children>
                                        <CheckBox fx:id="deleteCheckBox" />
                                        <Label styleClass="text-normal" text="%key.DeleteActual.DeleteOption" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="0.0" left="4.0" right="140.0" top="0.0" />
                            </padding>
                        </GridPane>
                        <!-- キャンセルボタン -->
                        <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" GridPane.rowIndex="2">
                            <children>
                                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButton" styleClass="SimpleButton" minWidth="100.0" prefHeight="35.0" text="%key.Cancel" />
                            </children>
                            <padding>
                                <Insets bottom="0.0" left="4.0" right="4.0" top="0.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="0.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
                <Pane fx:id="progressPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                    <children>
                        <ProgressIndicator maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" />
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
