<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jp.adtekfuji.javafxcommon.controls.*?>

<AnchorPane id="AnchorPane" prefHeight="160.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jp.adtekfuji.javafxcommon.selectcompo.ScheduleSelectionCompoFxController">
    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <VBox spacing="8.0">
            <GridPane hgap="4.0" vgap="4.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="160.0" minWidth="0.0" prefWidth="96.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="290.0" minWidth="0.0" prefWidth="284.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Label text="%key.startDate" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <DatePicker fx:id="startDatePicker" prefWidth="130.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="%key.Time" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TimeHMTextField fx:id="startTime" maxWidth="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
            <Label text="%key.Pattern"/>
            <HBox spacing="8.0">
                <GridPane hgap="16.0" minWidth="-Infinity" style="-fx-border-width: 0 1 0 0; -fx-border-color: #aaaaaa;"
                          vgap="16.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <RadioButton fx:id="daySchedule" selected="true" text="%key.Day" GridPane.rowIndex="0">
                        <toggleGroup>
                            <ToggleGroup fx:id="schedulePeriod"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="weekSchedule" text="%key.Week" toggleGroup="$schedulePeriod"
                                 GridPane.rowIndex="1"/>
                    <RadioButton fx:id="monthSchedule" text="%key.Month" toggleGroup="$schedulePeriod"
                                 GridPane.rowIndex="2"/>
                    <padding>
                        <Insets right="16.0"/>
                    </padding>
                </GridPane>
                <!--日-->
                <HBox fx:id="daySchedulePane" alignment="CENTER_LEFT" maxHeight="0.0" spacing="8.0">
                    <Label text="%key.Interval"/>
                    <TextField fx:id="dayPeriod" prefWidth="50.0" text="1"/>
                    <Label text="%key.PerDay"/>
                </HBox>
                <!--週-->
                <VBox fx:id="weekSchedulePane" managed="false" spacing="8.0" visible="false">
                    <HBox alignment="CENTER_LEFT" spacing="8.0">
                        <Label text="%key.Interval"/>
                        <TextField fx:id="weekPeriod" prefWidth="50.0" text="1"/>
                        <Label text="%key.PerWeek"/>
                    </HBox>
                    <GridPane hgap="16.0" vgap="16.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <CheckBox fx:id="checkSunday" text="%key.Sunday" GridPane.columnIndex="0"
                                  GridPane.rowIndex="0"/>
                        <CheckBox fx:id="checkMonday" text="%key.Monday" GridPane.columnIndex="1"
                                  GridPane.rowIndex="0"/>
                        <CheckBox fx:id="checkTuesday" text="%key.Tuesday" GridPane.columnIndex="2"
                                  GridPane.rowIndex="0"/>
                        <CheckBox fx:id="checkWednesday" text="%key.Wednesday" GridPane.columnIndex="3"
                                  GridPane.rowIndex="0"/>
                        <CheckBox fx:id="checkThursday" text="%key.Thursday" GridPane.columnIndex="0"
                                  GridPane.rowIndex="1"/>
                        <CheckBox fx:id="checkFriday" text="%key.Friday" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                        <CheckBox fx:id="checkSaturday" text="%key.Saturday" GridPane.columnIndex="2"
                                  GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>
                <!--月-->
                <GridPane fx:id="monthSchedulePane" hgap="16.0" managed="false" minWidth="-Infinity" vgap="16.0"
                          visible="false">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <RadioButton fx:id="monthDay" mnemonicParsing="false" selected="true" text="%key.Day"
                                 GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <toggleGroup>
                            <ToggleGroup fx:id="monthSchedulePeriod"/>
                        </toggleGroup>
                    </RadioButton>
                    <HBox fx:id="monthDayPane" alignment="CENTER_LEFT" minWidth="-Infinity" spacing="8.0"
                          GridPane.columnIndex="1" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="0"
                          GridPane.vgrow="SOMETIMES">
                        <TextField fx:id="monthDayMonth" prefWidth="50.0" text="1"/>
                        <Label text="%key.PerMonth"/>
                        <TextField fx:id="monthDayDay" prefWidth="50.0" text="1"/>
                        <Label text="%key.Day"/>
                    </HBox>
                    <RadioButton fx:id="monthWeek" mnemonicParsing="false" text="%key.Week"
                                 toggleGroup="$monthSchedulePeriod" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <HBox fx:id="monthWeekPane" alignment="CENTER_LEFT" disable="true" minWidth="-Infinity"
                          spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <TextField fx:id="monthWeekMonth" prefWidth="50.0" text="1"/>
                        <Label text="%key.PerMonth"/>
                        <ComboBox fx:id="monthWeekWeek"/>
                        <ComboBox fx:id="monthWeekDay"/>
                    </HBox>
                </GridPane>
            </HBox>
        <StackPane.margin>
            <Insets/>
        </StackPane.margin>
        </VBox>
        <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </padding>
    </StackPane>
</AnchorPane>
