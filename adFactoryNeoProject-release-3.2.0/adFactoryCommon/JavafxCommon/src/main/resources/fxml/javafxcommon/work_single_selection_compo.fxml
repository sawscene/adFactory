<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jp.adtekfuji.javafxcommon.selectcompo.WorkSingleSelectionCompoFxController">
    <children>
        <StackPane fx:id="stackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <RadioButton fx:id="showLatestOnlyRButton" mnemonicParsing="false" selected="true" text="%key.displayLatestOnly">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="showingToggleGroup" />
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton mnemonicParsing="false" text="%key.displayAll" toggleGroup="$showingToggleGroup" />
                            </children>
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </GridPane.margin>
                        </HBox>
                        <GridPane GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <TreeView fx:id="hierarchyTree" />
                                <ListView fx:id="treeItemList" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" />
                            </children>
                        </GridPane>
                        <VBox GridPane.rowIndex="2">
                            <HBox>
                                <children>
                                    <Label fx:id="itemElementName" prefHeight="24.0" prefWidth="60.0" textOverrun="CLIP">
                                        <HBox.margin>
                                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                        </HBox.margin>
                                    </Label>
                                    <TextField fx:id="selectedItemName" editable="false" prefHeight="24.0" HBox.hgrow="ALWAYS">
                                        <HBox.margin>
                                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                        </HBox.margin>
                                    </TextField>
                                </children>
                            </HBox>
                            <CheckBox fx:id="enableLatestOnly" text="%key.UseLatest" />
                        </VBox>
                    </children>
                </GridPane>
                <Pane fx:id="progressPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                    <children>
                        <ProgressIndicator maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" />
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
