<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level %date{yyyy/MM/dd HH:mm:ss.SSS} [%thread]%logger.%method(%line) - %msg%n%ex"/>
        </Console>
        <RollingFile name="RollingFile" fileName="${env:ADFACTORY_HOME}/logs/adManagerApp.log" filePattern="${env:ADFACTORY_HOME}/logs/adManagerApp-%i.log.zip">
            <PatternLayout pattern="%-5level %date{yyyy/MM/dd HH:mm:ss.SSS} [%thread]%logger.%method(%line) - %msg%n%ex"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="50 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
