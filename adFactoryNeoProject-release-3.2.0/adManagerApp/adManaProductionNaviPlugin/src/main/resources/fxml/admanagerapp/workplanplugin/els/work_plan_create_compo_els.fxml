<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adtekfuji.admanagerapp.productionnaviplugin.component.els.WorkPlanCreateCompoFxControllerELS">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="100.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS" styleClass=".ContentScrollPane" vbarPolicy="ALWAYS">
                            <content>
                                <VBox spacing="8.0">
                                    <children>
                                        <GridPane fx:id="kanbanSettingGrid" hgap="8.0" vgap="8.0">
                                            <columnConstraints>
                                                <ColumnConstraints prefWidth="150.0" />
                                                <ColumnConstraints prefWidth="400.0" />
                                                <ColumnConstraints />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                                <RowConstraints />
                                            </rowConstraints>
                                            <children>
                                                <!-- 工程順 -->
                                                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                                    <children>
                                                        <Label styleClass="ContentTitleLabel" text="%key.OrderProcessesName" />
                                                        <Label styleClass="ContentTitleLabel" text="%key.RequiredMark" />
                                                    </children>
                                                </HBox>
                                                <TextField fx:id="workflowTextField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                                <Button fx:id="selectWorkflowButton" focusTraversable="false" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onSelectWorkflow" styleClass="SimpleButton" text="%key.Choice" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                                <!-- カンバン名 -->
                                                <HBox fx:id="kanbanNameHbox" alignment="CENTER_LEFT" prefWidth="400.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                                    <children>
                                                        <Label styleClass="ContentTitleLabel" text="%key.KanbanName" />
                                                    </children>
                                                </HBox>
                                                <TextField fx:id="kanbanNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                <!-- 指示コード -->
                                                <HBox alignment="CENTER_LEFT" prefWidth="400.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                                    <children>
                                                        <Label fx:id="instructionCodeLabel" styleClass="ContentTitleLabel" />
                                                    </children>
                                                </HBox>
                                                <TextField fx:id="instructionCodeTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                <Button fx:id="readInstructionButton" focusTraversable="false" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onReadInstruction" styleClass="SimpleButton" text="%key.ReadInstruction" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                                <!-- シリアル番号 -->
                                                <Label styleClass="ContentTitleLabel" text="%key.SerialNumber" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                                <GridPane alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" />
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" />
                                                    </columnConstraints>
                                                    <TextField fx:id="serialFromTextField" GridPane.columnIndex="0" />
                                                    <Label styleClass="ContentTitleLabel" text="%key.FromSymbol" GridPane.columnIndex="1">
                                                        <GridPane.margin>
                                                            <Insets left="10.0" right="10.0" />
                                                        </GridPane.margin>
                                                    </Label>
                                                    <TextField fx:id="serialToTextField" GridPane.columnIndex="2" />
                                                </GridPane>
                                                <Button focusTraversable="false" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#onAddSerial" styleClass="SimpleButton" text="%key.Add" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                                                <ListView fx:id="serialListView" minHeight="180" maxHeight="360.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                                <!-- ロット数量 -->
                                                <Label styleClass="ContentTitleLabel" text="%key.LotSize" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                                <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                                    <children>
                                                        <TextField fx:id="serialCountTextField" editable="true" maxWidth="200.0" alignment="CENTER_RIGHT" />
                                                        <Label styleClass="ContentTitleLabel" text="/" />
                                                        <TextField fx:id="instructionLotTextField" editable="true" maxWidth="200.0" alignment="CENTER_RIGHT" />
                                                    </children>
                                                </HBox>
                                                <!-- 追加情報 -->
                                                <ScrollPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="400.0" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="6">
                                                    <content>
                                                        <AnchorPane>
                                                            <children>
                                                                <VBox fx:id="propertyPane">
                                                                    <padding>
                                                                        <Insets bottom="8.0" left="8.0" right="16.0" top="8.0" />
                                                                    </padding>
                                                                </VBox>
                                                            </children>
                                                        </AnchorPane>
                                                    </content>
                                                    <GridPane.margin>
                                                        <Insets top="16.0" />
                                                    </GridPane.margin>
                                                </ScrollPane>
                                            </children>
                                        </GridPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                    </padding>
                                </VBox>
                            </content>
                            <GridPane.margin>
                                <Insets bottom="8.0" />
                            </GridPane.margin>
                        </ScrollPane>
                        <!-- ツールバー -->
                        <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" GridPane.rowIndex="1">
                            <items>
                                <Button mnemonicParsing="false" onAction="#onClose" styleClass="ContentButton" text="%key.Cancel" />
                                <Button fx:id="createButton" mnemonicParsing="false" onAction="#onCreate" styleClass="ContentButton" text="%key.RegistKanban" />
                            </items>
                        </ToolBar>
                    </children>
                </GridPane>
                <Pane fx:id="progressPane" maxHeight="-Infinity" maxWidth="-Infinity" StackPane.alignment="CENTER">
                    <children>
                        <ProgressIndicator fx:id="progressIndicator" prefHeight="80.0" prefWidth="80.0" />
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
