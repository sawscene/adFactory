<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import adtekfuji.admanagerapp.productionnaviplugin.controls.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="adtekfuji.admanagerapp.productionnaviplugin.component.WorkPlanImportCompoController">
    <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <GridPane fx:id="operationPane" vgap="4.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
            </rowConstraints>
            <!-- タイトル -->
            <Label styleClass="ContentTitleLabel" text="%key.KanbanImportTitle">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>

            <!-- ファイル選択 -->
            <GridPane style="-fx-background-color: #F3F3F3" vgap="8.0" GridPane.rowIndex="1">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                </rowConstraints>
                <padding>
                    <Insets bottom="8.0"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="30.0" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="8.0" right="8.0"/>
                    </GridPane.margin>
                    <FromToPicker fx:id="fromToPicker" alignment="CENTER" hgap="10.0"
                                  orientation="HORIZONTAL" prefWrapLength="400.0" vgap="8.0"/>
                    <CheckBox fx:id="ignoreCheck" text="%key.ImportKanban_IgnoreExistingKanban"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <!-- 自動読込ボタン -->
                    <Button fx:id="autoImportButton" mnemonicParsing="false"
                            onAction="#onAutoImportButton" styleClass="ContentButton"
                            text="%key.WokPlan.AutoImport"/>
                    <!-- インポートボタン -->
                    <Button fx:id="importButton" mnemonicParsing="false" onAction="#onImportAction"
                            styleClass="ContentButton" text="%key.import.title"/>
                </HBox>
                <TabPane fx:id="tabImportMode" tabClosingPolicy="UNAVAILABLE">
                    <!-- CSV形式 -->
                    <Tab id="tabCsvMode" fx:id="tabCsvMode" text="%key.import.csv">
                        <GridPane hgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"
                                                   minWidth="-Infinity"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"
                                                   minWidth="-Infinity"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                            <Label styleClass="text-normal" text="%key.KanbanImportFolder"/>
                            <TextField fx:id="importCsvFileField" styleClass="text-normal"
                                       GridPane.columnIndex="1"/>
                            <!-- ファイル選択 -->
                            <Button fx:id="selectCsvFileButton" minWidth="50.0"
                                    mnemonicParsing="false" onAction="#onSelectCsvFileAction"
                                    prefHeight="35.0" styleClass="SimpleButton"
                                    text="%key.KanbanImportFolderChoice"
                                    GridPane.columnIndex="2"/>
                        </GridPane>
                    </Tab>
                    <!-- Excel形式 -->
                    <Tab id="tabExcelMode" fx:id="tabExcelMode" text="%key.import.excel">
                        <GridPane hgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"
                                                   minWidth="-Infinity"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"
                                                   minWidth="-Infinity"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                            <Label styleClass="text-normal" text="%key.import.file"/>
                            <TextField fx:id="importExcelFileField" styleClass="text-normal"
                                       GridPane.columnIndex="1"/>
                            <Button fx:id="selectExcelFileButton" minWidth="50.0"
                                    mnemonicParsing="false" onAction="#onSelectExcelFileAction"
                                    prefHeight="35.0" styleClass="SimpleButton"
                                    text="%key.KanbanImportFolderChoice"
                                    GridPane.columnIndex="2"/>
                        </GridPane>
                    </Tab>
                    <!-- ヘッダl形式 -->
                    <Tab id="tabHeaderMode" fx:id="tabHeaderMode" text="%key.import.header.csv">
                        <GridPane hgap="8.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"
                                                   minWidth="-Infinity"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity"
                                                   minWidth="-Infinity"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                            </padding>
                            <Label styleClass="text-normal" text="%key.KanbanImportFolder"/>
                            <TextField fx:id="importHeaderFileField" styleClass="text-normal"
                                       GridPane.columnIndex="1"/>
                            <!-- フォルダ選択 -->
                            <Button fx:id="selectHeaderFileButton" minWidth="50.0"
                                    mnemonicParsing="false" onAction="#onSelectHeaderFileAction"
                                    prefHeight="35.0" styleClass="SimpleButton"
                                    text="%key.KanbanImportFolderChoice"
                                    GridPane.columnIndex="2"/>
                        </GridPane>
                    </Tab>
                </TabPane>
            </GridPane>

            <!-- 結果タイトル -->
            <Label styleClass="text-normal" text="%key.KanbanImportResult" GridPane.rowIndex="2">
                <padding>
                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </padding>
            </Label>

            <!-- 結果 -->
            <ListView fx:id="resultList" editable="false" focusTraversable="false" prefHeight="100.0"
                      GridPane.rowIndex="3">
                <padding>
                    <Insets left="4.0" right="4.0"/>
                </padding>
            </ListView>

            <!-- ボタン -->
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" GridPane.rowIndex="4">
                <!--キャンセルボタン-->
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelAction"
                        styleClass="ContentButton" text="%key.Cancel"/>
                <!-- フォーマット変更ボタン -->
                <Button fx:id="formatChangeButton" mnemonicParsing="false" onAction="#onFormatChangeAction"
                        styleClass="ContentButton" text="%key.import.format.change"/>
            </ToolBar>
        </GridPane>
        <Pane fx:id="progressPane" maxHeight="-Infinity" maxWidth="-Infinity" StackPane.alignment="CENTER">
            <ProgressIndicator fx:id="progressIndicator" prefHeight="80.0" prefWidth="80.0"/>
        </Pane>
    </StackPane>
</AnchorPane>
