<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.chart.*?>
<?import jp.adtekfuji.javafxcommon.controls.*?>
<?import adtekfuji.admanagerapp.chartplugin.controls.*?>

<AnchorPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adtekfuji.admanagerapp.chartplugin.controller.WorkSummaryCompoController">
    <children>
        <SplitPane fx:id="workSummaryPane" dividerPositions="0.2" orientation="HORIZONTAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minWidth="320.0" styleClass="ContentPane" SplitPane.resizableWithParent="false">
                    <children>
                        <!-- 対象日 -->
                        <fx:include fx:id="datePane" source="DatePane.fxml" AnchorPane.topAnchor="8.0" />
                        <!--タクトタイム-->
                        <Label layoutX="8.0" prefHeight="23.0" text="%key.TactTime" AnchorPane.topAnchor="70.0" />
                        <TimeTextField fx:id="tactTimeField" layoutX="218.0" prefHeight="23.0" prefWidth="80.0" AnchorPane.topAnchor="70.0" />
                        <!-- 対象工程順 -->
                        <fx:include fx:id="workflowPane" source="WorkflowPane.fxml" AnchorPane.topAnchor="180.0" />
                        <!-- 対象工程 -->
                        <fx:include fx:id="workPane" source="WorkPane.fxml" AnchorPane.topAnchor="480.0" />
                    </children>
                </AnchorPane>
                <AnchorPane minWidth="400.0" styleClass="ContentPane">
                    <children>
                        <AnchorPane prefHeight="140.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <HBox layoutX="8.0" layoutY="115.0" spacing="8.0" AnchorPane.bottomAnchor="0.0">
                                    <children>
                                        <!-- 更新ボタン -->
                                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#onUpdate" prefHeight="23.0" prefWidth="80.0" text="%key.Update" />
                                        <!-- CSV出力ボタン -->
                                        <Button fx:id="exportButton" mnemonicParsing="false" onAction="#onExport" prefHeight="23.0" prefWidth="80.0" text="%key.OutputAnalysisReport" />
                                        <!-- 画像ファイル出力ボタン -->
                                        <Button fx:id="outputImageFileButton" minWidth="80.0" mnemonicParsing="false" onAction="#onOutputImageFile" prefHeight="23.0" text="%key.OutputImageFile" />
                                    </children>
                                </HBox>
                                <ToggleButton fx:id="taktTimeButton" prefHeight="23.0" prefWidth="70.0" text="%key.TactTime" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="315.0" />
                                <PropertySaveTableView fx:id="summaryView" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="summaryNameColumn" prefWidth="160.0" style="-fx-alignment: CENTER-LEFT;" styleClass="rightAlignedTableColumn" text="%key.PropertyName" />
                                        <TableColumn fx:id="summaryValueColumn" prefWidth="120.0" style="-fx-alignment: CENTER-RIGHT;" styleClass="rightAlignedTableColumn" text="%key.PropertyContent" />
                                    </columns>
                                </PropertySaveTableView>
                                <VBox fx:id="progressPane" alignment="CENTER" layoutX="-374.0" layoutY="-338.0" AnchorPane.bottomAnchor="338.0" AnchorPane.leftAnchor="-374.0" AnchorPane.rightAnchor="374.0" AnchorPane.topAnchor="-338.0">
                                    <children>
                                        <ProgressIndicator fx:id="progressIndicator" prefHeight="80.0" prefWidth="80.0" />
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                        <ScrollPane fx:id="chartPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="8.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="144.0">
                            <content>
                                <StackPane fx:id="stackPane" >
                                    <children>
                                        <!-- 平均作業時間チャート -->
                                        <BarChartWithMarkers fx:id="barChart" animated="false" categoryGap="2.0" >
                                            <xAxis>
                                                <CategoryAxis fx:id="barXAxis" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="barYAxis" label="%key.AverageWorkTime" />
                                            </yAxis>
                                        </BarChartWithMarkers>
                                        <!--偏差チャート-->
                                        <LineChart fx:id="lineChart" horizontalGridLinesVisible="false" verticalGridLinesVisible="false" alternativeColumnFillVisible="false" alternativeRowFillVisible="false" animated="false" >
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis fx:id="lineYAxis" label="%key.itemsStandardDeviation" side="RIGHT" />
                                            </yAxis>
                                        </LineChart>
                                    </children>
                                </StackPane>
                            </content>
                        </ScrollPane>
                    </children>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </padding>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
