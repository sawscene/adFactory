<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jp.adtekfuji.javafxcommon.controls.*?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adtekfuji.admanagerapp.workreportplugin.component.WorkReportCompoFxController">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <GridPane minHeight="-Infinity" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" StackPane.alignment="TOP_LEFT">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <AnchorPane maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" SplitPane.resizableWithParent="false">
                            <children>
                                <GridPane hgap="5.0" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <!-- 選択組織リスト -->
                                        <ListView fx:id="organizationList" prefHeight="124.0" prefWidth="200.0" styleClass="ContentList" GridPane.columnIndex="1" />
                                        <HBox alignment="BOTTOM_LEFT" spacing="5.0" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.valignment="BOTTOM">
                                            <GridPane.margin>
                                                <Insets bottom="5.0" right="5.0" top="5.0" />
                                            </GridPane.margin>
                                            <children>
                                                <!-- 組織選択ボタン -->
                                                <Button fx:id="organizationSelectButton" mnemonicParsing="false" onAction="#onSelectAction" styleClass="NarrowWidthButton" text="%key.WorkReport.OrganizationSelect" GridPane.valignment="BOTTOM" />
                                                <!-- 更新ボタン -->
                                                <Button onAction="#onUpdateAction" styleClass="NarrowWidthButton" text="%key.Update" GridPane.valignment="BOTTOM" />
                                                <Pane HBox.hgrow="ALWAYS" />
                                                <!-- 作業追加ボタン -->
                                                <Button fx:id="addButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onAddAction" styleClass="NarrowWidthButton" text="%key.WorkReport.add" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM" />
                                            </children>
                                        </HBox>
                                        <GridPane>
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" />
                                                <ColumnConstraints hgrow="SOMETIMES" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <!-- 年月入力 -->
                                                <!-- <TextField fx:id="reportMonthField" disable="true" prefWidth="160.0" styleClass="text-middle" visible="false" GridPane.columnIndex="1" /> -->
                                                <Label text="%key.startDate" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                                                    <GridPane.margin>
                                                        <Insets right="10.0" />
                                                    </GridPane.margin>
                                                </Label>
                                                <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                <Label text="%key.endDate" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                                                    <GridPane.margin>
                                                        <Insets right="10.0" />
                                                    </GridPane.margin>
                                                </Label>
                                                <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                <!-- タイトル -->
                                                <Label styleClass="ContentTitleLabel" text="%key.WorkReportTitle">
                                                    <padding>
                                                        <Insets right="40.0" />
                                                    </padding>
                                                </Label>
                                            </children>
                                        </GridPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                    </padding>
                                </GridPane>
                            </children>
                        </AnchorPane>
                        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefWidth="800.0" GridPane.rowIndex="1">
                            <children>
                                <PropertySaveTableView fx:id="listView" editable="true" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" styleClass="ContentList" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="workDateColumn" editable="true" prefWidth="100.0" text="%key.WorkReport.WorkDate" />
                                        <TableColumn fx:id="organizationIdentifyColumn" editable="true" prefWidth="100.0" text="%key.WorkReport.OrganizationIdentify" />
                                        <TableColumn fx:id="organizationNameColumn" editable="true" prefWidth="100.0" text="%key.WorkReport.OrganizationName" />
                                        <TableColumn fx:id="workNumberColumn" editable="true" prefWidth="100.0" text="%key.WorkReport.WorkNumber" />
                                        <TableColumn fx:id="workNameColumn" editable="true" prefWidth="160.0" text="%key.WorkReport.WorkName" />
                                        <TableColumn fx:id="orderNumberColumn" editable="true" prefWidth="110.0" text="%key.WorkReport.OrderNumber" />
                                        <TableColumn fx:id="workTimeColumn" editable="true" prefWidth="100.0" style="-fx-alignment: center-right" text="%key.WorkReport.WorkTime" />
                                        <TableColumn fx:id="unitTimeColumn" editable="false" prefWidth="100.0" style="-fx-alignment: center-right" text="工数/台" />
                                        <TableColumn fx:id="actualNumColumn" editable="false" prefWidth="100.0" style="-fx-alignment: center-right" text="%key.WorkReport.WorkNum" />
                                        <TableColumn fx:id="workNumColumn" editable="false" prefWidth="80.0" style="-fx-alignment: center-right" text="%key.WorkReport.WorkNum" />
                                        <TableColumn fx:id="serialNoColumn" editable="true" prefWidth="160.0" text="%key.SerialNumber" />
                                        <TableColumn fx:id="controlNoColumn" editable="true" prefWidth="160.0" text="%key.ProductionNumber" />
                                        <TableColumn fx:id="resourcesColumn" editable="true" prefWidth="80.0" style="-fx-alignment: center-left" text="%equipmentNo" />
                                        <TableColumn fx:id="finalNumColumn" editable="true" prefWidth="80.0" style="-fx-alignment: center-right" text="%completedNum" />
                                        <TableColumn fx:id="defectNumColumn" editable="true" prefWidth="80.0" style="-fx-alignment: center-right" text="%key.DefectNum" />
                                        <TableColumn fx:id="stopTimeColumn" editable="true" prefWidth="80.0" style="-fx-alignment: center-right" text="%equipmentStop" />
                                        <TableColumn fx:id="remarks1Column" editable="false" prefWidth="100.0" text="%remarks1" />
                                        <TableColumn fx:id="remarks2Column" editable="false" prefWidth="100.0" text="%remarks2" />
                                    </columns>
                                </PropertySaveTableView>
                            </children>
                        </AnchorPane>
                        <GridPane hgap="10.0" GridPane.rowIndex="2">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                            </columnConstraints>
                            <Button fx:id="toolButton" mnemonicParsing="false" onAction="#onToolAction" styleClass="NarrowWidthButton" text="%key.Tool" textAlignment="RIGHT" wrapText="true" />
                            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteAction" styleClass="NarrowWidthButton" text="%key.Delete" textAlignment="RIGHT" wrapText="true" GridPane.columnIndex="2" />
                            <Button fx:id="outputButton" mnemonicParsing="false" onAction="#onOutputAction" styleClass="NarrowWidthButton" text="%key.OutputData" textAlignment="RIGHT" wrapText="true" GridPane.columnIndex="3" />
                            <Button fx:id="registButton" mnemonicParsing="false" onAction="#onRegistAction" styleClass="NarrowWidthButton" text="%key.Save" textAlignment="RIGHT" wrapText="true" GridPane.columnIndex="4" />
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </GridPane>
                    </children>
                </GridPane>
                <Pane fx:id="progressPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                    <children>
                        <ProgressIndicator />
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
