<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import jp.adtekfuji.javafxcommon.controls.*?>

<!-- 不良理由編集画面 -->
<AnchorPane fx:id="MainScenePane" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adtekfuji.admanagerapp.systemsettingplugin.component.DefectReasonEditCompoFxController">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <SplitPane fx:id="defectReasonCategoryPane" dividerPositions="0.45" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                        <GridPane SplitPane.resizableWithParent="false">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- 不良理由区分ツリー -->
                                <TreeView fx:id="defectReasonCategoryTree" onKeyPressed="#onKeyPressed" GridPane.rowIndex="0" />
                                <ToolBar nodeOrientation="LEFT_TO_RIGHT" styleClass="TransparentToolbar" prefHeight="40.0" GridPane.rowIndex="1">
                                    <items>
                                        <!-- 区分追加ボタン -->
                                        <Button fx:id="createTreeButton" mnemonicParsing="false" onAction="#onCreateReasonCategory" styleClass="NarrowWidthButton" text="%key.NewCreate" />
                                        <!-- 区分編集ボタン -->
                                        <Button fx:id="editTreeButton" mnemonicParsing="false" onAction="#onEditReasonCategory" styleClass="NarrowWidthButton" text="%key.Edit" disable="true" />
                                        <!-- 区分削除ボタン -->
                                        <Button fx:id="deleteTreeButton" mnemonicParsing="false" onAction="#onDeleteReasonCategory" styleClass="NarrowWidthButton" text="%key.Delete" disable="true" />
                                    </items>
                                </ToolBar>
                            </children>
                        </GridPane>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                                <RowConstraints vgrow="SOMETIMES" />
                                <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <ToolBar nodeOrientation="RIGHT_TO_LEFT">
                                            <items>
                                            </items>
                                        </ToolBar>
                                    </children>
                                </GridPane>
                                <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                                    <children>
                                        <!-- 不良理由一覧 -->
                                        <PropertySaveTableView fx:id="defectReasonList" editable="true" layoutX="49.0" layoutY="152.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <columns>
                                                <TableColumn fx:id="selectedColumn" editable="true" prefWidth="40.0" />
                                                <TableColumn fx:id="defectReasonColumn" editable="true"  prefWidth="500.0" text="%key.DefectReason" />
                                            </columns>
                                        </PropertySaveTableView>
                                    </children>
                                </AnchorPane>
                                <AnchorPane GridPane.rowIndex="2">
                                    <children>
                                        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" />
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <ToolBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0">
                                                    <items>
                                                        <!-- 理由追加ボタン -->
                                                        <Button fx:id="addDefectReasonButton" mnemonicParsing="false" onAction="#onAddDefectReason" styleClass="NarrowWidthButton" text="%key.Add" disable="true" />
                                                        <!-- 理由削除ボタン -->
                                                        <Button fx:id="deleteDefectReasonButton" mnemonicParsing="false" onAction="#onDeleteDefectReason" styleClass="NarrowWidthButton" text="%key.Delete" disable="true" />
                                                        <!-- 移動ボタン -->
                                                        <Button fx:id="moveDefectReasonButton" mnemonicParsing="false" onAction="#onMoveDefectReason" styleClass="NarrowWidthButton" text="%key.Move" disable="true" />
                                                    </items>
                                                </ToolBar>
                                                <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="100" GridPane.columnIndex="1">
                                                    <items>
                                                        <!-- 登録ボタン -->
                                                        <Button fx:id="registDectReasonButton" mnemonicParsing="false" onAction="#onRegistDefectReason" styleClass="NarrowWidthButton" text="%key.Regist" disable="true" />
                                                    </items>
                                                </ToolBar>
                                            </children>
                                        </GridPane>
                                    </children>
                                </AnchorPane>
                            </children>
                        </GridPane>
                    </items>
                </SplitPane>
                <Pane fx:id="Progress" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                    <children>
                        <ProgressIndicator maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" />
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
