<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import org.controlsfx.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jp.adtekfuji.javafxcommon.controls.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="adtekfuji.admanagerapp.dsitemeditplugin.controller.DsItemListController">
    <children>
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <GridPane minHeight="0.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" maxHeight="-Infinity" minHeight="-Infinity" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <!-- タイトル -->
                        <Label styleClass="ContentTitleLabel" text="品番一覧" />
                        <!-- 上部ペイン -->
                        <GridPane hgap="8.0" GridPane.rowIndex="1" >
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES" minHeight="-Infinity" />
                            </rowConstraints>
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="8.0" >
                                    <children>
                                        <!-- 検索品番フィールド -->
                                        <RestrictedTextField fx:id="productNoFiled" verifier="CHARACTER_ONLY" maxLength="256"
                                                             styleClass="ContentTextBox" prefWidth="240.0" onAction="#onSearch" />
                                        <!-- 検索ボタン -->
                                        <Button mnemonicParsing="false" onAction="#onSearch" prefWidth="96.0" text="%key.Search" />
                                    </children>
                                    <padding>
                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                    </padding>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="8.0" GridPane.columnIndex="1">
                                    <children>
                                        <!-- 作業ライン -->
                                        <ComboBox fx:id="lineComboBox" onAction="#onSearch" prefWidth="160.0" />
                                    </children>
                                    <padding>
                                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                                    </padding>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="0.0" left="8.0" right="8.0" top="8.0" />
                            </padding>
                        </GridPane>
                        <AnchorPane minHeight="0.0" minWidth="0.0" GridPane.rowIndex="2">
                            <children>
                                <!-- 品番一覧 -->
                                <PropertySaveTableView fx:id="dsItemTable" minHeight="0.0" minWidth="0.0" styleClass="ContentList" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >
                                    <columns>
                                        <!-- 品番 -->
                                        <TableColumn fx:id="productNoColumn" prefWidth="200.0" text="品番" />
                                        <!-- 品名 -->
                                        <TableColumn fx:id="productNameColumn" prefWidth="200.0" text="品名" />
                                        <!-- 車種・タイプ -->
                                        <TableColumn fx:id="specColumn" prefWidth="100.0" text="車種・タイプ" style="-fx-alignment: center" />
                                        <!-- 組付治具台車 -->
                                        <TableColumn fx:id="location1Column" prefWidth="150.0" text="組付治具台車" style="-fx-alignment: center" />
                                        <!-- 検査治具台車 -->
                                        <TableColumn fx:id="location2Column" prefWidth="150.0" text="検査治具台車" style="-fx-alignment: center" />
                                        <!-- 構成部品 -->
                                        <TableColumn fx:id="bomColumn" prefWidth="150.0" text="構成部品" style="-fx-alignment: center" />
                                        <!-- 組付工程 -->
                                        <TableColumn fx:id="workflow1Column" prefWidth="150.0" text="組付工程" style="-fx-alignment: center" />
                                        <!-- 検査工程 -->
                                        <TableColumn fx:id="workflow2Column" prefWidth="150.0" text="検査工程" style="-fx-alignment: center" />
                                    </columns>
                                </PropertySaveTableView>
                            </children>
                            <GridPane.margin>
                                <Insets bottom="8.0" />
                            </GridPane.margin>
                        </AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="3">
                            <children>
                                <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                                        <ColumnConstraints hgrow="SOMETIMES" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <!-- 編集ツールバー -->
                                        <AnchorPane>
                                            <children>
                                                <ToolBar fx:id="inspectionToolBar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" >
                                                    <items>
                                                        <!-- 追加ボタン -->
                                                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAdd" styleClass="NarrowWidthButton" text="%key.Add" />
                                                        <!-- 編集ボタン -->
                                                        <Button fx:id="editButton" mnemonicParsing="false" onAction="#onEdit" styleClass="NarrowWidthButton" text="%key.Edit" />
                                                        <!-- 削除ボタン -->
                                                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDelete" styleClass="NarrowWidthButton" text="%key.Delete" />
                                                    </items>
                                                </ToolBar>
                                            </children>
                                        </AnchorPane>
                                    </children>
                                </GridPane>
                            </children>
                        </AnchorPane>
                    </children>
                </GridPane>
                <Pane fx:id="progressPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                    <children>
                        <ProgressIndicator maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" />
                    </children>
                </Pane>
            </children>
        </StackPane>
    </children>
</AnchorPane>
