<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="450.0" prefWidth="580.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adtekfuji.admanagerapp.ledgermanagerplugin.component.LedgerRegisterCompoFxController">
    <StackPane fx:id="stackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <ScrollPane>
                <VBox prefHeight="350.0">
                    <GridPane hgap="8.0" prefHeight="321.0" prefWidth="456.0" vgap="12.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="0.0" minWidth="-Infinity" prefWidth="0.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES"/>
                            <RowConstraints maxHeight="-Infinity" vgrow="NEVER"/>
                            <RowConstraints maxHeight="-Infinity" vgrow="NEVER"/>
                            <RowConstraints maxHeight="-Infinity" vgrow="NEVER"/>
                            <RowConstraints maxHeight="-Infinity" vgrow="NEVER"/>
                            <RowConstraints/>
                        </rowConstraints>
                        <!-- 帳票名 -->
                        <Label fx:id="ledgerNameLabel" text="%key.LedgerName" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="ledgerName" GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="25.0"
                                   maxWidth="300.0"/>
                        <!-- テンプレートファイル -->
                        <Label fx:id="ledgerSheetLabel" text="%key.LedgerSheet" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <HBox spacing="8.0" maxWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <TextField fx:id="ledgerSheetPath" disable="true" prefHeight="25.0" prefWidth="300.0"/>
                            <Button minWidth="50.0" mnemonicParsing="false" onAction="#onSelectTemplateFile"
                                    styleClass="SimpleButton" text="%key.Choice"/>
                        </HBox>
                        <!-- 帳票タイプ -->
                        <Label fx:id="ledgerTypeLabel" text="%key.LedgerType" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="ledgerTypeCombo" prefHeight="25.0" maxWidth="300" GridPane.columnIndex="1"
                                  GridPane.rowIndex="2"/>
                        <!-- 対象 -->
                        <Label fx:id="tagetWorkLabel" text="%key.TargetWork" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <HBox spacing="8.0" maxWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <TextField fx:id="target" disable="true" prefHeight="25.0" prefWidth="300.0"/>
                            <Button minWidth="50.0" mnemonicParsing="false" onAction="#onSelectTarget"
                                    styleClass="SimpleButton" text="%key.Choice"/>
                        </HBox>
                        <!-- 設備 -->
                        <Label text="%key.Organization" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <HBox spacing="8.0" maxWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <TextField fx:id="organization" disable="true" prefHeight="25.0" prefWidth="300.0"/>
                            <Button minWidth="50.0" mnemonicParsing="false" onAction="#onSelectOrganization"
                                    styleClass="SimpleButton" text="%key.Choice"/>
                        </HBox>
                        <!-- 組織 -->
                        <Label text="%key.Equipment" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <HBox spacing="8.0" maxWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <TextField fx:id="equipment" disable="true" prefHeight="25.0" prefWidth="300.0"/>
                            <Button minWidth="50.0" mnemonicParsing="false" onAction="#onSelectEquipment"
                                    styleClass="SimpleButton" text="%key.Choice"/>
                        </HBox>
                        <!-- 置換されなかったタグを残す -->
                        <Label text="%key.LeaveUnreplacedTags" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <CheckBox fx:id="noRemoveTagsCheck" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        <!-- 出力期間 -->
                        <Label text="%key.TargetDay" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                        <VBox fx:id="schedulePain" maxWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="7"
                              GridPane.rowSpan="2"/>
                        <!-- キータグ -->
                        <Label text="%key.KeyTag" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                        <VBox fx:id="keyTagPain" maxWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="9"
                              GridPane.rowSpan="2"/>
                    </GridPane>
                </VBox>
                <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </padding>
            </ScrollPane>
            <HBox alignment="CENTER_RIGHT" spacing="8.0">
                <padding>
                    <Insets bottom="-6.0" left="12.0" right="12.0" top="12.0"/>
                </padding>
                <Button mnemonicParsing="false" onAction="#onRegister" styleClass="ContentButton" text="%key.Regist"/>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onCancel" styleClass="ContentButton"
                        text="%key.Cancel"/>
            </HBox>
        </VBox>
        <padding>
            <Insets bottom="-6.0" left="12.0" right="12.0" top="12.0"/>
        </padding>
        <Pane fx:id="progressPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity">
            <ProgressIndicator maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"/>
        </Pane>
    </StackPane>
</AnchorPane>
