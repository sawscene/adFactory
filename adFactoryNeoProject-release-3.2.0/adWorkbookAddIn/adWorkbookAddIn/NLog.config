<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target xsi:type="File" name="file" 
			layout="${uppercase:${level}} ${longdate} ${message} ${exception:format=ToString}"
			fileName="${environment:ADFACTORY_HOME}\\adWorkbook\\logs\\adWorkbookAddIn.log"
            archiveFileName="${environment:ADFACTORY_HOME}\\adWorkbook\\logs\\adWorkbookAddIn.{#}.log"
            archiveNumbering="Rolling"
            archiveAboveSize="500000" 
            maxArchiveFiles="10"/>
  </targets>

  <rules>
    <!-- 全てのログ（Traceレベル以上）をファイルに出力 -->
    <logger name="*" minlevel="Trace" writeTo="file" />
  </rules>
</nlog>
