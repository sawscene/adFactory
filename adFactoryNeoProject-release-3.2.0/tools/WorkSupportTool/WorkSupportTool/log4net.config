<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <appender name="SizeRollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Log/WorkSupportTool.log" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="size" />
      <param name="MaximumFileSize" value="5MB" />
      <param name="MaxSizeRollBackups" value="9" />
      <param name="StaticLogFileName" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss.fff} [%t] %-5p %m%n" />
      </layout>
      <Encoding value="UTF-8"/>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="SizeRollingLogFileAppender" />
    </root>
  </log4net>
</configuration>
