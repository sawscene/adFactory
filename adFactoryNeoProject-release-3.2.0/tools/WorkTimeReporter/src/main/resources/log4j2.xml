<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level %date{yyyy/MM/dd HH:mm:ss.SSS} [%thread]%logger.%method(%line) - %msg%n%ex"/>
        </Console>
        <RollingFile name="RollingFile" fileName="logs/workTimeReporter.log" filePattern="logs/workTimeReporter-%i.log.zip">
            <PatternLayout pattern="%-5level %date{yyyy/MM/dd HH:mm:ss.SSS} [%thread]%logger.%method(%line) - %msg%n%ex"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>
