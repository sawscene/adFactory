<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../../styles/admonitorcycletakttimeplugin/Styles.css" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jp.adtekfuji.admonitorcycletakttimeplugin.CycleTaktTimeCompoFxController">
    <children>
        <Pane fx:id="mainPane" prefHeight="1080.0" prefWidth="1920.0">
            <children>
                <!-- 背景 -->
                <VBox prefHeight="1080.0" prefWidth="1920.0">
                    <children>
                        <HBox prefHeight="90.0" styleClass="CycleTakt-background-darkGray">
                            <children>
                                <Label prefHeight="90.0" prefWidth="592.0" alignment="CENTER" text="%key.ForFuji.ProductionVolume" styleClass="CycleTakt-label-white" />
                                <Pane prefHeight="90.0" prefWidth="12.0" />
                                <Label fx:id="currentDateLabel" prefHeight="90.0" prefWidth="1316.0" alignment="CENTER" text="9999 年 99 月 99 日" styleClass="CycleTakt-label-white" />
                            </children>
                        </HBox>
                        <HBox prefHeight="638.0" styleClass="CycleTakt-background-lightGray">
                            <children>
                                <Pane prefWidth="592.0" />
                                <Pane prefWidth="12.0" styleClass="CycleTakt-background-darkGray" />
                                <Pane fx:id="countdownBackgroundPane" prefWidth="1316.0" />
                            </children>
                        </HBox>
                        <Pane prefHeight="12.0" styleClass="CycleTakt-background-darkGray" />
                        <Pane prefHeight="340.0" styleClass="CycleTakt-background-lightGray" />
                    </children>
                </VBox>

                <!-- 生産台数 -->
                <Label fx:id="productionNumLabel" layoutX="30.0" layoutY="120.0" prefWidth="500.0" alignment="TOP_RIGHT" text="99" styleClass="CycleTakt-label-production-count" />
                <Label layoutX="460.0" layoutY="480.0" text="%key.ForFuji.CycleUnit" styleClass="CycleTakt-label-unit" />

                <!-- 通常表示 -->
                <Pane fx:id="countdownPane" visible="true">
                    <!-- 残り時間 -->
                    <Label fx:id="countdownMinLabel" layoutX="660.0" layoutY="150.0" prefWidth="500.0" alignment="TOP_RIGHT" text="99" styleClass="CycleTakt-label-countdown-black" />
                    <Label layoutX="1010.0" layoutY="150.0" prefWidth="500.0" alignment="TOP_CENTER" text="：" styleClass="CycleTakt-label-countdown-black" />
                    <Label fx:id="countdownSecLabel" layoutX="1360.0" layoutY="150.0" prefWidth="500.0" alignment="TOP_LEFT" text="99" styleClass="CycleTakt-label-countdown-black" />
                </Pane>
                <!-- 休憩表示 -->
                <Pane fx:id="breaktimePane" visible="false">
                    <!-- リフレッシュタイム -->
                    <Pane fx:id="refreshTimePane" visible="false">
                        <ImageView layoutX="700.0" layoutY="110.0" fitHeight="160.0" fitWidth="200.0" preserveRatio="true">
                            <image>
                                <Image url="@../../image/admonitorcycletakttimeplugin/refresh_time.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="910.0" layoutY="120.0" text="%key.ForFuji.CycleTaktTime.RefreshTime" styleClass="CycleTakt-label-breaktime" />
                    </Pane>
                    <!-- 昼休憩 -->
                    <Pane fx:id="lunchTimePane" visible="false">
                        <Label layoutX="870.0" layoutY="120.0" text="%key.ForFuji.CycleTaktTime.LunchTime" styleClass="CycleTakt-label-breaktime" />
                        <ImageView layoutX="1520.0" layoutY="110.0" fitHeight="160.0" fitWidth="200.0" preserveRatio="true">
                            <image>
                                <Image url="@../../image/admonitorcycletakttimeplugin/lunch_time.png" />
                            </image>
                        </ImageView>
                    </Pane>
                    <!-- 残り時間 -->
                    <Label fx:id="breaktimeMinLabel" layoutX="660.0" layoutY="220.0" prefWidth="500.0" alignment="TOP_RIGHT" text="99" styleClass="CycleTakt-label-countdown-green" />
                    <Label layoutX="1010.0" layoutY="220.0" prefWidth="500.0" alignment="TOP_CENTER" text="：" styleClass="CycleTakt-label-countdown-green" />
                    <Label fx:id="breaktimeSecLabel" layoutX="1360.0" layoutY="220.0" prefWidth="500.0" alignment="TOP_LEFT" text="99" styleClass="CycleTakt-label-countdown-green" />
                </Pane>

                <!-- 計画台数 -->
                <ImageView layoutX="140.0" layoutY="580.0" fitHeight="250.0" fitWidth="300.0" preserveRatio="true">
                    <image>
                        <Image url="@../../image/admonitorcycletakttimeplugin/plan.png" />
                    </image>
                </ImageView>
                <Label layoutX="420.0" layoutY="770.0" text="%key.ForFuji.PlannedNumber" styleClass="CycleTakt-label-gray" />
                <!-- タクト -->
                <ImageView layoutX="810.0" layoutY="580.0" fitHeight="250.0" fitWidth="300.0" preserveRatio="true">
                    <image>
                        <Image url="@../../image/admonitorcycletakttimeplugin/takt.png" />
                    </image>
                </ImageView>
                <Label layoutX="1050.0" layoutY="770.0" text="%key.ForFuji.Takt" styleClass="CycleTakt-label-gray" />
                <!-- ラインアウト -->
                <ImageView layoutX="1460.0" layoutY="580.0" fitHeight="250.0" fitWidth="300.0" preserveRatio="true">
                    <image>
                        <Image url="@../../image/admonitorcycletakttimeplugin/lineout.png" />
                    </image>
                </ImageView>
                <Label layoutX="1580.0" layoutY="770.0" text="%key.ForFuji.LineOut" styleClass="CycleTakt-label-gray" />

                <!-- 計画台数 -->
                <Label fx:id="planNumLabel" layoutX="120.0" layoutY="840.0" prefWidth="300.0" alignment="TOP_RIGHT" text="99" styleClass="CycleTakt-label-number-gray" />
                <Label layoutX="440.0" layoutY="940.0" text="%key.ForFuji.CycleUnit" styleClass="CycleTakt-label-unit" />
                <!-- タクト -->
                <Label fx:id="taktMinLabel" layoutX="620.0" layoutY="840.0" prefWidth="300.0" alignment="TOP_RIGHT" text="99" styleClass="CycleTakt-label-number-gray" />
                <Label layoutX="920.0" layoutY="940.0" text="%key.time.minute" styleClass="CycleTakt-label-unit" />
                <Label fx:id="taktSecLabel" layoutX="1000.0" layoutY="930.0" prefWidth="160.0" alignment="TOP_RIGHT" text="99" styleClass="CycleTakt-label-number-gray-small" />
                <Label layoutX="1170.0" layoutY="940.0" text="%key.time.second" styleClass="CycleTakt-label-unit" />
                <!-- ラインアウト -->
                <Label fx:id="lineoutNumLabel" layoutX="1230.0" layoutY="840.0" prefWidth="500.0" alignment="TOP_RIGHT" text="999" styleClass="CycleTakt-label-number-red" />
                <Label layoutX="1750.0" layoutY="940.0" text="%key.ForFuji.CycleUnit" styleClass="CycleTakt-label-unit" />
            </children>
        </Pane>
    </children>
</AnchorPane>
